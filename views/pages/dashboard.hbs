{{#if length}}
<h1>Your todos</h1>
<ul>
  {{#each todos}}
  <li>{{this.title}}
    <a href={{constructUpdate}}><button>Edit</button></a>
    <form action={{constructDelete}} method="POST">
      <input type="submit" value="Delete">
    </form>
  </li>
  {{/each}}
  <a href='/todo/create'><button>Create a new todo</button></a>
</ul>
{{else}}
<h1>Hey {{name}}. Create a new todo <a href='/todo/create'>here</a></h1>
{{/if}}